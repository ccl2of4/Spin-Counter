<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/bluetooth"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="groupn.spin_counter.BluetoothBrawlActivity"
    android:background="@android:color/holo_blue_dark"
    android:tag="large_screen">

    <RelativeLayout
        android:id="@+id/bluetooth_main_layout"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <View
            android:id="@+id/anchor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />
        <View
            android:id="@+id/anchor2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/main_bluetooth"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:textSize="80dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:gravity="top|center_horizontal" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/bluetooth_bg"
            android:src="@drawable/brawlbg"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="You: "
            android:id="@+id/you_score"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="30dp"
            android:textSize="40dp"
            android:layout_above="@+id/anchor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Them: "
            android:id="@+id/them_score"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="60dp"
            android:textSize="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ff000000" />

    </RelativeLayout>

</RelativeLayout>
