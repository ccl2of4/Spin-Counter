<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="groupn.spin_counter.FriendsActivity"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TableRow android:layout_height="wrap_content" android:layout_width="fill_parent"
        android:id="@+id/TableRow01">

        <TextView android:id="@+id/friends_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_weight="1"
            android:textColor="#2E2E2E"
            />
        <ImageButton android:id="@+id/friends_delete"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_action_remove"
            android:background="@null"
            />

    </TableRow>

    <TableRow android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <TextView  android:id="@+id/friends_maxSpins"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="20sp"
            android:textColor="#2E2E2E" />

        <TextView android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/friends_wins"
            android:height="20sp"
            android:textColor="#2E2E2E"/>

    </TableRow>

</TableLayout>